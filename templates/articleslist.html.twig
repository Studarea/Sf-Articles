{% extends 'base.html.twig' %}



{% block content %}
    <main>

    <section>

        {% for article in articles %}

            <div class="container">
                <div class="container-content"><img src="{{ article.image }}" alt="image" class="img"/></div>
                <a href="{{ path('article_page', {'id': article.id}) }}">
                    <div class="container-content">{{ article.title }}</div>
                </a>
            </div>

        {% endfor %}

    </section>


    </main>



{% endblock content %}